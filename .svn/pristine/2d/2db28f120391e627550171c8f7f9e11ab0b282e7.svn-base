     */
    public void printing(PrintStream os, final Reservation reservation) {
        os.println("+++++++++++++++++++++++++++++++++++++++");
        reservation.printing(os);
        os.println("+++++++++++++++++++++++++++++++++++++++");
        List<Room> rooms = calendar.giveRooms(reservation);   
        for (Room rm: rooms) {
            rm.printing(os);
            os.println("......................................");
        }
        
    }
    
